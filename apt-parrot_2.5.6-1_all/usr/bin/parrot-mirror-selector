#!/bin/bash

function list() {
	echo -e "Parrot Mirror Selector - set up the APT mirror you desire
		
MIRRORS
         codename -  speed   -  region       -   country       (provider)
 
            us    -  1 Gbps  - north america  - massachussetts  (LUG MTU)
            eu    - 10 Gbps  -   europe       -    italy        (GARR)
            eu2   - 250 Mbps -   europe       -    france       (FROZENBOX)
            eu4   -    ?     -   europe       -    england      (SMOOTHOSTING)
            eu5   - 250 Mbps -   europe       -[multiple nodes] (CLOUDFLARE)
            asia  -  1 Gbps  -    asia        -    russia       (YANDEX)
            asia2 -  1 Gbps  -    asia        -  bangladesh     (DHAKACOM)
            sa    - 100 Mbps - south america  -    ecuador      (CEDIA)
            sa2   - 100 Mbps - south america  -    ecuador      (ESPOCH)
            sa3   - 100 Mbps - south america  -    ecuador      (UTA)
            me    -  1 Gpbs  -  middle east   -     iran        (ASIS)


USAGE
 	 parrot-mirror-selector <mirror codename>

EXAMPLE
 	 parrot-mirror-selector asia
"
}


function eu() {
	cat /etc/apt/templates/eu/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function eu2() {
	cat /etc/apt/templates/eu2/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function eu4() {
	cat /etc/apt/templates/eu4/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function eu5() {
	cat /etc/apt/templates/eu5/parrot.list > /etc/apt/sources.list.d/parrot.list
}


function us() {
	cat /etc/apt/templates/us/parrot.list > /etc/apt/sources.list.d/parrot.list
}


function asia() {
	cat /etc/apt/templates/asia/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function asia2() {
	cat /etc/apt/templates/asia2/parrot.list > /etc/apt/sources.list.d/parrot.list
}


function sa() {
	cat /etc/apt/templates/sa/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function sa2() {
	cat /etc/apt/templates/sa2/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function sa3() {
	cat /etc/apt/templates/sa3/parrot.list > /etc/apt/sources.list.d/parrot.list
}

function me() {
	cat /etc/apt/templates/me/parrot.list > /etc/apt/sources.list.d/parrot.list
}


case $1 in
	list)
		list
	;;
	eu)
		eu
	;;
	eu2)
		eu2
	;;
	eu4)
		eu4
	;;
	eu5)
		eu5
	;;
	us)
		us
	;;
	asia)
		asia
	;;
	asia2)
		asia2
	;;
	sa)
		sa
	;;
	sa2)
		sa2
	;;
	sa3)
		sa3
	;;
	me)
		me
	;;
	*)
		list
	;;
esac
